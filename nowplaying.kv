#:kivy 1.10.0

<NowPlayingLabel>:
    text_size: self.size
    valign: 'center'
    halign: 'right'
    markup: True
    font_size: '28sp'


<NowPlaying>:
    orientation: 'vertical'
    padding: [16]
    NowPlayingLabel:
        id: title
        color: [1, 0, 0, 1]
        font_size: '36sp'
        underline: True
        bold: True
    NowPlayingLabel:
        id: artist
        color: [0, 1, 0, 1]
    NowPlayingLabel
        id: album
        color: [0, 0.5, 1, 1]
        italic: True


<NowPlayingBox>:
    orientation: 'horizontal'
    padding: [16]
